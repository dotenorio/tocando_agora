{
  "manifest_version": 2,
  "name": "Tocando agora (beta)",
  "version": "0.2.7",
  "description": "Extensão para notificar qual música/vídeo está tocando no Deezer, Youtube, Spotify ou Google Play Music.",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "notifications",
    "*://*.deezer.com/*",
    "*://*.youtube.com/*",
    "*://*.spotify.com/*",
    "*://play.google.com/music/*"
  ],
  "icons": {
    "128": "icon_extension.png"
  },
  "page_action": {
    "default_icon": "icon_pageaction_active.png",
    "default_title": "Tocando agora (beta)"
  },
  "author": "Fernando Migliorini Tenório",
  "short_name": "Tocando agora"
}